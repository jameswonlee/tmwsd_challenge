doctype html
html
    head 
        title Self-Destructing Messages
        link(rel="stylesheet" href="/index.css")
    body
        div.outer-container
            h1.burn-messenger-header Burn Messenger
            div.form-container
                form(action="/create" method="POST")
                    div.text-area-container
                        textarea.message-text-area(name="content")
                        button.submit-btn(type="submit") Save Message
                div.messages-container
                    h2.messages-header Messages
                    h3.messages-count You have #{messages.length} unread messages
                    li.messages
                        each message in messages 
                            div.message-link 
                                a(href=`/message/${message.id}`) View message from #{dayjs(message.timestamp).format('MMM-D-YY h:mm:ssa')}
